<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Trips</title>

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">

    <!-- Leaflet -->
    <link rel="stylesheet"
          href="https://unpkg.com/leaflet/dist/leaflet.css"/>

    <style>
        body {
            background: #f4f6f9;
            padding: 30px;
        }

        h2 {
            font-weight: 600;
            margin-bottom: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        }

        #map {
            height: 450px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .table thead th {
            background: #343a40;
            color: #fff;
            position: sticky;
            top: 0;
            z-index: 2;
            white-space: nowrap;
        }

        .table td {
            vertical-align: middle;
            white-space: nowrap;
        }

        .table-hover tbody tr:hover {
            background-color: #f1f5ff;
        }

        .fare {
            font-weight: 600;
            color: #28a745;
        }

        .back-link {
            display: inline-block;
            margin-top: 15px;
            font-weight: 500;
        }
    </style>
</head>
<body>

<div class="container-fluid">
    <div class="card">
        <div class="card-body">

            <h2>üß≥ Trips</h2>

            <!-- MAP -->
            <div id="map"></div>

            <!-- TABLE -->
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead>
                        <tr>
                            <th>Destination</th>
                            <th>Fare</th>
                            <th>Origin Airports</th>
                            <th>Origin Departure</th>
                            <th>Destination Arrival</th>
                            <th>Destination Departure</th>
                            <th>Origin Arrival</th>
                            <th>Land Transfer (km)</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for trip in trips %}
                        <tr
                            data-origin-departure-lat="{{ trip.originDepartureLat }}"
                            data-origin-departure-lon="{{ trip.originDepartureLon }}"
                            data-destination-arrival-lat="{{ trip.destinationArrivalLat }}"
                            data-destination-arrival-lon="{{ trip.destinationArrivalLon }}"
                            data-destination-departure-lat="{{ trip.destinationDepartureLat }}"
                            data-destination-departure-lon="{{ trip.destinationDepartureLon }}"
                            data-origin-arrival-lat="{{ trip.originArrivalLat }}"
                            data-origin-arrival-lon="{{ trip.originArrivalLon }}"
                        >
                            <td>{{ trip.destination }}</td>
                            <td class="fare">‚Ç¨{{ "%.2f"|format(trip.fullFare) }}</td>
                            <td>{{ trip.originDepartureAirportName }} ‚Üí {{ trip.originArrivalAirportName }}</td>
                            <td>{{ trip.originDepartureTime }}</td>
                            <td>{{ trip.destinationArrivalTime }}</td>
                            <td>{{ trip.destinationDepartureTime }}</td>
                            <td>{{ trip.originArrivalTime }}</td>
                            <td>
                                {% if trip.distance %}
                                    {{ "%.2f"|format(trip.distance) }}
                                {% else %}
                                    N/A
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <a href="/" class="back-link">‚Üê Back to search</a>

        </div>
    </div>
</div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

<script>
const map = L.map('map');

// Base map
L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
}).addTo(map);

const bounds = [];
const drawnRoutes = new Map(); // Deduplicate routes

// Helper: unique key for route (directional)
function routeKey(a, b) {
    return `${a[0].toFixed(4)},${a[1].toFixed(4)}->${b[0].toFixed(4)},${b[1].toFixed(4)}`;
}

// Keep track of row ‚Üí its lines for hover highlighting
document.querySelectorAll("tbody tr").forEach(row => {

    const legs = [
        // Outbound
        {
            from: [
                parseFloat(row.dataset.originDepartureLat),
                parseFloat(row.dataset.originDepartureLon)
            ],
            to: [
                parseFloat(row.dataset.destinationArrivalLat),
                parseFloat(row.dataset.destinationArrivalLon)
            ]
        },
        // Return
        {
            from: [
                parseFloat(row.dataset.destinationDepartureLat),
                parseFloat(row.dataset.destinationDepartureLon)
            ],
            to: [
                parseFloat(row.dataset.originArrivalLat),
                parseFloat(row.dataset.originArrivalLon)
            ]
        }
    ];

    row._lines = []; // store lines for this row

    legs.forEach(leg => {
        if (leg.from.some(isNaN) || leg.to.some(isNaN)) return;

        const key = routeKey(leg.from, leg.to);
        let line;
        if (drawnRoutes.has(key)) {
            line = drawnRoutes.get(key);
        } else {
            line = L.polyline([leg.from, leg.to], {
                color: '#007bff',
                weight: 2,
                opacity: 0.65
            }).addTo(map);
            drawnRoutes.set(key, line);
        }

        row._lines.push(line);
        bounds.push(leg.from, leg.to);
    });

    // Hover highlight
    row.addEventListener("mouseenter", () => {
        row._lines.forEach(line => line.setStyle({ color: '#dc3545', weight: 4, opacity: 1 }));
    });
    row.addEventListener("mouseleave", () => {
        row._lines.forEach(line => line.setStyle({ color: '#007bff', weight: 2, opacity: 0.65 }));
    });
});

// Fit map to all routes
if (bounds.length) {
    map.fitBounds(bounds, { padding: [40, 40] });
}
</script>

</body>
</html>
