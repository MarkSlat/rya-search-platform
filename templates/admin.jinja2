<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h2>✈️ Admin Panel</h2>

    {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
        <div class="mt-3">
          {% for category, message in messages %}
            <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
              {{ message }}
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endwith %}

    <!-- Base airports form -->
<form method="POST" action="{{ url_for('admin') }}" class="mt-4">
    <div class="form-group">
        <label for="base_airports">Select Base Airports</label>
        <select id="base_airports" name="base_airports" class="form-control" multiple size="10" required>
            {% for code in airport_codes %}
                <option value="{{ code }}"
                    {% if code in base_airport_codes %} selected {% endif %}>
                    {{ code }}
                </option>
            {% endfor %}
        </select>
        <small class="form-text text-muted">Use Ctrl/Cmd + click to select multiple airports.</small>
    </div>
    <button type="submit" class="btn btn-primary">Update Base Airports & Flights</button>
</form>

<!-- Button to update all flights -->
<div class="mt-4">
    <form method="POST" action="{{ url_for('update_all_flights') }}" style="display:inline;">
        <button type="submit" class="btn btn-success">Update All Flights</button>
    </form>
</div>

<br/>

<div>
<a href="/" class="back-link">← Back to search</a>
</div>

</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
