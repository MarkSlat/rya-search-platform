<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Flight Query</title>

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css">

    <!-- Flatpickr -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

    <style>
        body {
            background: #f4f6f9;
            padding: 30px;
        }

        h2 {
            font-weight: 600;
            margin-bottom: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0,0,0,0.05);
        }

        .form-control,
        select {
            border-radius: 6px;
        }

        select[multiple] {
            min-height: 140px;
        }

        .form-section {
            margin-bottom: 25px;
        }

        .form-section h5 {
            font-weight: 600;
            margin-bottom: 15px;
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 6px;
        }

        .help-text {
            font-size: 0.85rem;
            color: #6c757d;
        }

        .btn-primary {
            padding: 10px 24px;
            font-weight: 600;
            border-radius: 8px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="card">
        <div class="card-body">

            <h2>‚úàÔ∏è Flight Query</h2>

            <form method="POST" action="/submit">

                <!-- Airports -->
                <div class="form-section">
                    <h5>Airports</h5>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Origin Departure Airports</label> <a href="/admin">(Update)</a>
                            <select class="form-control" name="origin_departure_airports[]" multiple required>
                                {% for option in origin_options %}
                                    <option value="{{ option }}">{{ option }}</option>
                                {% endfor %}
                            </select>
                            <small class="help-text">Hold Ctrl / Cmd to select multiple</small>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Origin Arrival Airports</label>
                            <select class="form-control" name="origin_arrival_airports[]" multiple required>
                                {% for option in origin_options %}
                                    <option value="{{ option }}">{{ option }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Dates -->
                <div class="form-section">
                    <h5>Dates</h5>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Outbound Dates</label>
                            <input id="r1_dates" class="form-control" name="r1_dates" required>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Return Dates</label>
                            <input id="r2_dates" class="form-control" name="r2_dates" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Lengths of Stay</label>
                        <input class="form-control" name="lengths_of_stay" value="2,3,4" required>
                        <small class="help-text">Comma separated (e.g. 2,3,4)</small>
                    </div>
                </div>

                <!-- Filters -->
                <div class="form-section">
                    <h5>Filters</h5>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Blacklist Countries</label>
                            <select class="form-control" name="blacklist_countries[]" multiple>
                                {% for option in country_options %}
                                    <option value="{{ option }}">{{ option }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label>Whitelist Countries</label>
                            <select class="form-control" name="whitelist_countries[]" multiple>
                                {% for option in country_options %}
                                    <option value="{{ option }}">{{ option }}</option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Options -->
                <div class="form-section">
                    <h5>Options</h5>

                    <div class="form-row align-items-end">
                        <div class="form-group col-md-4">
                            <label>Adults</label>
                            <input type="number" class="form-control" name="adults" value="1" min="1" required>
                        </div>

                        <div class="form-group col-md-4">
                            <label>Max Distance (km)</label>
                            <input type="number" class="form-control" name="max_distance">
                        </div>

                        <div class="form-group col-md-4">
                            <div class="form-check mt-4">
                                <input class="form-check-input" type="checkbox"
                                       name="same_airport_return" checked>
                                <label class="form-check-label">
                                    Same airport return
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Submit -->
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">
                        üîç Run Query
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
flatpickr("#r1_dates", {
    mode: "multiple",
    dateFormat: "Y-m-d"
});

flatpickr("#r2_dates", {
    mode: "multiple",
    dateFormat: "Y-m-d"
});
</script>

</body>
</html>
